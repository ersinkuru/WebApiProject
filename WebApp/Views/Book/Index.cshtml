@model IEnumerable<Entities.DTOs.BookDto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home Page";
}
<a class="" asp-controller="Book" asp-action="Create"><i class="material-icons">add_circle</i> Create </a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Book Name</th>
            <th scope="col">Author Name</th>
            <th scope="col">Book Type</th>
            <th scope="col">ISBN No</th>
            <th scope="col">Number Of Page</th>
            <th scope="col">Publisher</th>
            <th scope="col"> Release Date</th>
            <th scope='col'>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ToList())
        {
        <tr class="text-center">

            <td>@item.BookName</td>
            <td>@item.AuthorName</td>
            <td>@item.BookType</td>
            <td>@item.IsbnNo</td>
            <td>@item.NumberOfPage</td>
            <td>@item.Publisher</td>
            <td>@item.ReleaseDate</td>

            <td>
                <a class="" asp-controller="Book" asp-action="Update" asp-route-id="@item.Id"><i class="material-icons">change_circle</i>  </a>
                <a onclick="deleted(@item.Id)">
                    <i class="material-icons">delete</i>
                </a>
            </td>

        </tr>
        }
    </tbody>
</table>

@section Scripts {

    <script>
        function deleted(id) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this",
                type: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes,Delete it!'
            }).then((result) => {
                if (result.value) {

                    $.ajax({
                        url: '/Book/Delete/',
                        data: { id: id },
                        type: 'POST',
                        dataType: 'text',
                        success: function (data) {
                            Swal.fire({
                                title: 'Deleted!!',
                                text: "Your item has been deleted!",
                                type: 'success',
                                showCancelButton: false,
                                confirmButtonColor: '#3085d6',
                                //cancelButtonColor: '#d33',
                                confirmButtonText: 'Ok'
                            }).then((result) => {
                                if (result.value) {
                                    window.location.reload();
                                };
                            });
                        }
                    });
                };
            });
        };
    </script>
}


